@model MusicStore.Models.Album
@{
    ViewBag.Title = "Album";
}
<div class="row">
    <div class="col-md-3">
        @Html.Partial("_LeftPartial")
    </div>
    <div class="col-md-9">
        <div class="panel panel-primary no-border">
            <div class="panel-heading bg">
                BREADCRUMB HERE!
            </div>
            <div class="panel-body">
                <div class="media">
                    <h1 class="title-center">@Html.DisplayFor(model => model.Name)</h1>
                    <a class="pull-left" href="#">
                        <img class="media-object" src="~/Content/images/album/@Html.DisplayFor(model => model.LinkImage)" alt="@Html.DisplayFor(model => model.Name)">
                    </a>
                    <div class="media-body">

                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.Name)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Name)
                            </dd>

                            <dt>
                                Description
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Information)
                            </dd>

                            <dt>
                                Cover
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.LinkImage)
                            </dd>

                            <dt>
                                Released date
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.ReleaseDate)
                            </dd>

                            <dt>
                                Buy times
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.BuyCounter)
                            </dd>

                            <dt>
                                Genre
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Genre.Name)
                            </dd>

                            <dt>
                                Publisher
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Publisher.Name)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Language)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Language)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Price)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Price) USD
                            </dd>
                            <dt>

                            </dt>

                            <dd>
                                <button class="btn btn-primary">Buy</button>
                                <button class="btn btn-danger">Add</button>
                            </dd>
                            <dt>
                                Songs
                            </dt>

                            <dd>

                                <table class="table">
                                    <tr></tr>
                                    <tr>
                                        <th>No.</th>
                                        <th>Name</th>
                                        <th>Genre</th>
                                    </tr>
                                    @{int counter = 1;}
                                    @foreach (var item in Model.Songs)
                                    {
                                        <tr>
                                            <td>
                                                counter++
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Genre.Name)
                                            </td>
                                        </tr>
                                    }
                                </table>
                            </dd>
                            <dt>

                            </dt>
                            <dd>
                                <p>
                                    @Html.ActionLink("Homepage", "Index") |
                                    @Html.ActionLink("Back to List", "Index")
                                </p>
                            </dd>
                        </dl>

                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
