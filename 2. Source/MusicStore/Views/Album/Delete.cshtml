@model MusicStore.Models.Album

@{
    ViewBag.Title = "Delete";
}
<div class="panel panel-primary no-border">
    <div class="panel-heading bg">
        BREADCRUMB HERE!
    </div>
    <div class="panel-body">

        <h2 class="title-center">@ViewBag.Title</h2>
        <div class="alert alert-danger" role="alert">Warning! Are you sure you want to delete this album: @Html.DisplayFor(model => model.Name) ?</div>
        <div>
            <h4>@Html.DisplayFor(model => model.Name)</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Name)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>

                <dt>
                    Description
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Information)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.LinkImage)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.LinkImage)
                </dd>

                <dt>
                    Released date
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ReleaseDate)
                </dd>

                <dt>
                    Buy times
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.BuyCounter)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Language)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Language)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Price)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Price)
                </dd>

                <dt>
                    Genre
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Genre.Name)
                </dd>

                <dt>
                    Publisher
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Publisher.Name)
                </dd>
                <dt>

                </dt>
                <dd>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <input type="submit" value="Delete" class="btn btn-danger" />
                        </div>
                    }
                </dd>                                  
            </dl>            
        </div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>