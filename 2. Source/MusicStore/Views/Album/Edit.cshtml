@model MusicStore.Models.Album

@{
    ViewBag.Title = "Edit Album";
}
<div class="panel panel-primary no-border">
    <div class="panel-heading bg">
        BREADCRUMB HERE!
    </div>
    <div class="panel-body">

        <h2 class="title-center">@ViewBag.Title</h2>
        <div class="alert alert-warning" role="alert">Warning! You are editting the content of album: @Html.DisplayFor(model => model.Name)</div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Album</h4>
                <hr />
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.ID)

                <div class="form-group">
                    @Html.LabelFor(model => model.ID, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.ID, new { @disabled = "disabled" })
                        @Html.ValidationMessageFor(model => model.ID)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Name)
                        @Html.ValidationMessageFor(model => model.Name)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Information, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Information)
                        @Html.ValidationMessageFor(model => model.Information)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.LinkImage, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.LinkImage)
                        @Html.ValidationMessageFor(model => model.LinkImage)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ReleaseDate, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.ReleaseDate)
                        @Html.ValidationMessageFor(model => model.ReleaseDate)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.BuyCounter, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.BuyCounter)
                        @Html.ValidationMessageFor(model => model.BuyCounter)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.IDGenre, "IDGenre", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("IDGenre", String.Empty)
                        @Html.ValidationMessageFor(model => model.IDGenre)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.IDPublisher, "IDPublisher", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("IDPublisher", String.Empty)
                        @Html.ValidationMessageFor(model => model.IDPublisher)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Language, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Language)
                        @Html.ValidationMessageFor(model => model.Language)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Price, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Price)
                        @Html.ValidationMessageFor(model => model.Price)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
    </div>
</div>